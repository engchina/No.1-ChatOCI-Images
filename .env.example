# ===========================================
# Oracle Cloud Storage 画像プロキシアプリ設定
# ===========================================

# 環境設定
FLASK_ENV=development

# サーバー設定
HOST=0.0.0.0
PORT=5005
DEBUG=false

# セキュリティ設定
SECRET_KEY=your-super-secret-key-change-this-in-production
MAX_CONTENT_LENGTH=104857600  # 100MB

# OCI設定
OCI_CONFIG_FILE=/root/.oci/config
OCI_PROFILE=DEFAULT
OCI_BUCKET=chatbot-images
OCI_REGION=ap-osaka-1
OCI_COMPARTMENT_OCID=ocid1.compartment.oc1..your-compartment-ocid

# Oracle Generative AI設定
OCI_COHERE_EMBED_MODEL=cohere.embed-v4.0
OCI_EMBEDDING_INPUT_TYPE=IMAGE
OCI_EMBEDDING_TRUNCATE=END
OCI_EMBEDDING_BATCH_SIZE=96
OCI_EMBEDDING_MAX_RETRIES=3
OCI_EMBEDDING_RETRY_DELAY=1
OCI_EMBEDDING_DIMENSIONS=1536

# Oracle Database設定
DB_USER=your-db-username
DB_PASSWORD=your-db-password
DB_DSN=your-oracle-db-dsn  # 完全なDSN文字列（例: host:port/service_name）

# セッション設定
SESSION_COOKIE_SECURE=false  # 開発環境ではfalse、本番環境ではtrue
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# CORS設定
CORS_ORIGINS=["*"]  # 本番環境では具体的なドメインを指定
CORS_METHODS=["GET", "POST", "OPTIONS"]

# レート制限設定
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_UPLOAD=10 per minute

# ログ設定
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# エラー監視（Sentry）
SENTRY_DSN=""  # Sentry DSNを設定（オプション、空文字列で無効化）
SENTRY_ENVIRONMENT=development

# セキュリティヘッダー設定
FORCE_HTTPS=false  # 本番環境ではtrue
CONTENT_SECURITY_POLICY=default-src 'self'; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'

# 許可されたファイル拡張子（カンマ区切り）
ALLOWED_EXTENSIONS=["png", "jpg", "jpeg", "gif", "webp", "bmp", "svg"]
